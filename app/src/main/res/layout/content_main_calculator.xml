<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              app:layout_behavior="@string/appbar_scrolling_view_behavior"
              tools:context=".activities.MainActivity"
              tools:showIn="@layout/activity_main_calculator">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="true"
            android:gravity="center_vertical"
            android:minHeight="80dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/base_currency_flag"
                android:layout_width="67dp"
                android:layout_height="50dp"
                android:paddingLeft="16dp"
                android:paddingStart="16dp"
                android:src="@drawable/flag_4x3_eu"/>

            <TextView
                android:id="@+id/base_currency_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="16dp"
                android:paddingStart="16dp"
                android:text="US Dollar"/>

            <xplr.in.currencycalculator.views.ClearableEditText
                android:id="@+id/base_currency_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="10dp"
                android:paddingRight="10dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                style="@style/Widget.AppCompat.Button.Borderless"
                android:id="@+id/rate_comparison_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rate"/>

            <Button
                style="@style/Widget.AppCompat.Button.Borderless"
                android:id="@+id/offer_comparison_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Offer"/>
        </LinearLayout>
    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipeContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/list_currency_calculations"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:scrollbarStyle="insideOverlay"/>
    </android.support.v4.widget.SwipeRefreshLayout>

</LinearLayout>
