<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:tools="http://schemas.android.com/tools">
    <TextView
        android:id="@+id/trade_form_instructions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/trade_input_prompt"
        android:textColor="#000"/>

    <xplr.in.currencycalculator.views.CurrencyAmountEditorView
        android:id="@+id/trade_for_currency"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/trade_compare_button"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Compare Trade"/>

    <TextView
        style="@style/ResultFont"
        android:id="@+id/trade_result_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Some result"/>
</merge>