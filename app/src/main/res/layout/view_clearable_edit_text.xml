<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/text_intput_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-12dp">
        <!--
        -12 margin so the EditText aligns as if the TextInputLayout were not there.
        This is especially needed for places that don't have a hint.
        -->
        <android.support.design.widget.TextInputEditText
            style="@style/ResultFont"
            android:id="@+id/edit_text"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:ems="6"
            android:imeOptions="actionDone"
            android:inputType="numberDecimal"
            android:paddingEnd="25dp"
            android:paddingLeft="5dp"
            android:paddingRight="25dp"
            android:paddingStart="5dp"/>
    </android.support.design.widget.TextInputLayout>

    <ImageButton
        android:id="@+id/clear_button"
        android:layout_width="25dp"
        android:layout_height="30dp"
        android:layout_gravity="end|center_vertical"
        android:layout_marginEnd="-5dp"
        android:layout_marginRight="-5dp"
        android:background="@null"
        android:contentDescription="@string/clear_content_desc"
        android:paddingEnd="12dp"
        android:paddingLeft="5dp"
        android:paddingRight="12dp"
        android:paddingStart="5dp"
        android:src="@drawable/ic_clear_black_24dp"/>
</merge>